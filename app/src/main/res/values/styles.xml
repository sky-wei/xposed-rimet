<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ItemMenu">
        <attr name="sky_itemMenuName" format="string" />
        <attr name="sky_itemMenuDesc" format="string" />
        <attr name="sky_itemMenuTextSize" format="dimension" />
        <attr name="sky_itemMenuLine" format="boolean" />
        <attr name="sky_itemMenuShowMore" format="boolean" />
    </declare-styleable>

</resources>
